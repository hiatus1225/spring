values(board_reply_seq.nextval, 'dddd', 1, 'lee');

commit;
-->

  
<!-- <mapper namespace="boardNameSpace"> -->
<mapper namespace="com.biz.mapper.BoardMapper">
	<resultMap id="myBoardMap" type="com.biz.board.BoardVO">
		<id property="bseq" column="bseq" />
		<result property="title" column="title" />
		<result property="contents" column="contents" />
		<result property="userid" column="userid" />
		<result property="regdate" column="regdate" />
		<result property="ufilePath" column="ufile_path" />
		<result property="ufileName" column="ufile_name" />
		<result property="ufileSize" column="ufile_size" />
		<result property="ufile_sys_name" column="ufile_sys_name" />
		<collection property="boardReplyVOList" resultMap="myBoardReplyMap" />  <!-- columnPrefix="r_" -->
		
	</resultMap>
	
	<resultMap id="myBoardReplyMap" type="com.biz.board.BoardReplyVO">
		<id property="rseq" column="rseq" />
		<result property="bseq" column="bseq" />
		<result property="reply" column="reply" />
		<result property="userid" column="userid" />
		<result property="regDate" column="regdate" />
	</resultMap>
	
	<!--  map  ref(참조가능) 
	<resultMap id="myBoardReplyMap" type="com.biz.board.BoardReplyVO">
		<map myBoardMap ></map>
		<collection myBoardMap ></map>
		<association property="author" column="blog_author_id" javaType="Author" resultMap=”authorResult”/>
	</resultMap> -->
	
	<!-- <resultMap id="brMap" type="com.biz.board.BoardVO">
		<association property="author" column="blog_author_id" javaType="Author" />
	</resultMap> -->
	
	
	
	
	<select id="brlist" resultMap="myBoardMap">
		select b.bseq, b.title, b.contents, b.userid, r.rseq, r.reply, r.userid, r.regdate from board b, board_reply r where b.bseq=r.bseq
		order by rseq desc
	</select>
		
	
	<select id="selectAll" resultMap="myBoardMap">
		select bseq,title,contents,userid, to_char(regdate, 'YYYY-MM-DD') as regdate, ufile_size, ufile_path, ufile_name, ufile_sys_name 
		from board 
		order by bseq desc
	</select>
	
	
	<select id="view" parameterType="int" resultMap="myBoardMap">
		select * from board where bseq=#{bseq}
	</select>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="bseq" parameterType="com.biz.board.BoardVO" > <!-- parameterType="com.biz.board.BoardVO" -->
		<selectKey keyProperty="bseq" resultType="int" order="AFTER">     
	 		select board_seq.currval as bseq from dual
	 	</selectKey>
	 	insert into board
		(bseq,title,contents,userid,ufile_size,ufile_path
		,ufile_name,ufile_sys_name) 
		values(board_seq.nextval,#{title},#{contents},#{userid},#{ufileSize}
		,#{ufilePath},#{ufileName},#{ufileSysName})
	</insert>  
	
	
	<update id="update" parameterType="com.biz.board.BoardVO">
		update board 
		set title=#{title}, contents=#{contents} 
		where bseq=#{bseq}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from board where bseq=#{bseq}
	</delete>
	
	
	<!-- 댓글  -->
	<select id="rselect" parameterType="int" resultType="com.biz.board.BoardReplyVO"> <!-- bseq -->
		select rseq, reply, userid, regdate, bseq 
		from board_reply 
		where bseq=#{bseq} order by rseq asc
	</select>
	
	<insert id="rinsert" parameterType="com.biz.board.BoardReplyVO">
		insert into board_reply(rseq,reply,userid,bseq) 
		values(board_reply_seq.nextval,#{reply},#{userid},#{bseq})
	</insert>
	
	<delete id="rdelete" parameterType="int">  <!-- rseq -->
		delete from board_reply where rseq=#{rseq}
	</delete>
	
	<update id="rupdate" parameterType="com.biz.board.BoardReplyVO">  <!-- vo -->
		update board_reply set REPLY=#{reply} ,USERID=#{userid}, regdate=sysdate where rseq=#{rseq} and bseq=#{bseq}
	</update>
	
	<!-- <![CDATA[ > ]]> -->
	
</mapper>	